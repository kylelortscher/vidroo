<!-- Code For Filter Sidebar -->
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Filter</h3>
  </div>
  <div class="panel-body">
    <div class="filter">
    	<%= form_tag videos_path, method: :get do %>
    		<div class="filterText">Sort By:</div>
			<select class="form-control form-group">
				<option value="mostliked" selected="selected">Most Liked</option>
				<option value="mostrecent">Most Recent</option>
			</select>
			<div class="filterText">Time:</div>
			<select class="form-control form-group">
				<option value="24hours" selected="selected">24 Hours</option>
				<option value="3days">3 Days</option>
				<option value="5days">5 Days</option>
				<option value="1Week">1 Week</option>
				<option value="2Weeks">2 Weeks</option>
				<option value="1Month">1 Month</option>
				<option value="3Months">3 Months</option>
				<option value="6Months">6 Months</option>
				<option value="1Year">1 Year</option>
				<option value="alltime">All Time</option>
			</select>
			<div class="filterText">Game:</div>
			<select class="form-control form-group">
				<option value="allgames" selected="selected">All</option>
				<option value="3days">3 Days</option>
				<option value="5days">5 Days</option>
				<option value="1Week">1 Week</option>
				<option value="2Weeks">2 Weeks</option>
				<option value="1Month">1 Month</option>
				<option value="3Months">3 Months</option>
				<option value="6Months">6 Months</option>
				<option value="1Year">1 Year</option>
				<option value="alltime">All Time</option>				
			</select>
    	  <center><%= submit_tag "Filter", name: nil,class:"btn btn-default" %></center>
    	<% end %>  
    </div>	
  </div>
</div>