<!-- This code is for the error messages will only be displayed if there is an error -->
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<% flash.each do |message_type, message| %>
			<div class="alert alert-<%= message_type %>">
				<%= message %>
				<a class="close" data-dismiss="alert">&#215;</a>
			</div>
			<% end %>
		</div>
	</div>
</div>	